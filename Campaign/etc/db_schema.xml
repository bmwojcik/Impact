<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="campaign_product" resource="default" engine="innodb" comment="CampaignProduct">
        <column xsi:type="int" name="campaign_product_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Campaign Product Id Column"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Product Id Column"/>
        <column xsi:type="int" name="campaign_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Campaign Id Column"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="campaign_product_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_CAMPAIGN_PRODUCT_CAMPAIGN_ID" table="impact_campaign" column="campaign_id" referenceTable="impact_campaign" referenceColumn="campaign_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_CAMPAIGN_PRODUCT_PRODUCT_ID" table="catalog_product_entity" column="product_id" referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="CAMPAIGN_PRODUCT_CAMPAIGN_PRODUCT_ID" indexType="btree">
            <column name="campaign_product_id"/>
        </index>
    </table>
    <table name="impact_campaign" resource="default" engine="innodb" comment="Campaign">
        <column xsi:type="int" name="campaign_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Campaign Id Column"/>
        <column xsi:type="int" name="status" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Status Column"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title Column"/>
        <column xsi:type="varchar" name="color" nullable="false" length="255" comment="Color Column"/>
        <column xsi:type="varchar" name="products" nullable="false" length="255" comment="Products Column"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="campaign_id"/>
        </constraint>
        <index referenceId="IMPACT_CAMPAIGN_CAMPAIGN_ID" indexType="btree">
            <column name="campaign_id"/>
        </index>
    </table>
</schema>
